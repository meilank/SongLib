<AnchorPane xmlns:fx="http://javafx.com/fxml/1" 
xmlns="http://javafx.com/javafx/8.0.65" 
fx:controller="application.SongLibController">

   <children>
      <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="500.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="162.0" minHeight="0.0" prefHeight="25.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="435.0" minHeight="10.0" prefHeight="411.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id= "add" mnemonicParsing="false" text="+" GridPane.rowIndex="2" onAction="#manageItems" />
            <Button fx:id= "delete" mnemonicParsing="false" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#manageItems" />
            <TextArea prefHeight="200.0" prefWidth="200.0" text="Song List" />
            <TextArea prefHeight="200.0" prefWidth="200.0" text="Song Details" GridPane.columnIndex="1" />
            <ListView fx:id= "list" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1" />
            <GridPane GridPane.columnIndex="1" GridPane.rowIndex="1">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TextArea prefHeight="200.0" prefWidth="200.0" text="Name" />
                  <TextArea prefHeight="200.0" prefWidth="200.0" text="Artist" GridPane.rowIndex="1" />
                  <TextArea prefHeight="200.0" prefWidth="200.0" text="Album" GridPane.rowIndex="2" />
                  <TextArea prefHeight="200.0" prefWidth="200.0" text="Year" GridPane.rowIndex="3" />
                  <TextField fx:id= "name" GridPane.columnIndex="1" />
                  <TextField fx:id= "artist" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id= "album" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id= "year" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
         </children>
      </GridPane>
   </children>
</AnchorPane>
